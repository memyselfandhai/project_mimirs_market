<header class="page-header row">
  <div class="col-md-4">
    </div>
  <div class="col-md-8">
    <h1>{{ product.name }}</h1>
    <h2>Price: ${{ product.price}}.00</h2>
  </div>
</header>

<img src="{{ productImagePath }}" alt="Product image" class="img-responsive">

<div class="details">
  <div class="col-md-8">
    <h2>Description</h2>
    <p>{{ product.description }}</p>

    <h2>SKU</h2>
    <p>{{ product.sku }}</p>

    <h2>Category</h2>
    <p>{{ product.Category.name }}</p>

    <form action='/cart' method='get'>
      <input name='productId' type='text' class='hidden' value={{product.id}} />
      <input type="submit" class="btn btn-primary" value='Add Me to Shopping Cart!'>
    </form>
  </div>
</div>

<br />
<hr />
<br />

<div class='row'>
{{#if relatedProducts.length }}
  <div id="search-results" class="row">
    {{#each relatedProducts as |product| }}
      <div class="user col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="thumbnail">
          <img src="{{ productImagePath }}" alt="Product image" class="img-responsive">
          <div class="caption">
            <h3>
              <a href="{{ productPath product.id }}" class="btn btn-default" role="button">{{product.name}}</a>
            </3>
          </div>
        </div>
      </div>
    {{/each }}
  </div>
{{else }}
  <p class="text-danger">No related products.</p>
{{/if }}</div>
